            :javascript
              var timer_div = document.getElementById('timer');
              var timer_time = (new Date(2014, 8, 10) - new Date()) / 1000;

              var getTimerTimeString = function(){
                var totalSec = (--timer_time);

                var hours = parseInt(totalSec / 3600);
                var hours_str = '';
                hours = (hours < 10 ? '0' + hours : hours).toString();
                hours[0] != undefined ? hours_str += ''+hours[0]+'' : hours_str += '';
                hours[1] != undefined ? hours_str += ''+hours[1]+'' : hours_str += '';
                hours[2] != undefined ? hours_str += ''+hours[2]+'' : hours_str += '';
                hours[3] != undefined ? hours_str += ''+hours[3]+'' : hours_str += '';

                var minutes = parseInt(totalSec / 60) % 60;
                minutes = (minutes < 10 ? '0' + minutes : minutes).toString();
                minutes = ''+minutes[0]+''+''+minutes[1]+'';

                var seconds = parseInt(totalSec) % 60;
                seconds = (seconds < 10 ? '0' + seconds : seconds).toString();
                seconds = ''+seconds[0]+''+''+seconds[1]+'';

                var str = hours_str + ':' + minutes + ':' + seconds;
                timer_div.innerHTML = str;
              };

              getTimerTimeString();

              var timer = setInterval(getTimerTimeString, 1000);
