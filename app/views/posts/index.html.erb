<div id="main">
  <header>
  </header>
  <div id="site_content">
    <div id="sidebar_container">

      <div class="sidebar">

        <%= render 'user' %>

      </div>

    </div>

    <div class="content">

      <h1 class="headLists">List of all posts on this site</h1>

      <%= paginate @posts %>

      <table class="table table-hover">
        <tr class="thRow">
          <th>User</th>
          <th>Title</th>
          <th>Body</th>
          <th>Data</th>
          <th></th>
          <th></th>
        </tr>

        <% @posts.each do |post| %>
            <tr>
              <td><%= post.user_id %></td>
              <td><%= link_to post.title, post %></td>
              <td><%= post.body[1..3] %></td>
              <td><%= post.data %></td>
              <% if user_signed_in? %>
                  <% if current_user.id == post.user_id %>
                  <td><%= link_to 'Редактировать', edit_post_path(post) %></td>
                  <td><%= link_to 'Удалить', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% else %>
                  <td></td>
                  <td></td>
                  <% end %>
              <% end %>
            </tr>
        <% end %>
      </table>
      <%= paginate @posts %>
      <br />

      <%= link_to 'New Post', new_post_path %>


    </div>

  </div>

  <footer>

  </footer>
</div>
