%h1.headLists List of all posts on this site
%span= paginate @posts,:window => 1
- @posts.each do |post|
  %div.post
    %div.post-header
      %table.post-title
        %tr
          %td Название:
          %td= post.title
          %td Автор:
          %td= post.user.user_name
          %td Дата создания:
          %td= post.created_at
          %td.post-menu
            %div.btn-group
              = link_to post , :class => "btn btn-inverse" do
                %i{ :class => 'icon-file icon-white'}
                Читать ...
              - if user_signed_in?
                - if post.user_id == current_user.id
                  %a{ :class => 'btn btn-inverse dropdown-toggle', :data => { :toggle => 'dropdown'}, :href => ''}
                    %span.caret
                  %ul.dropdown-menu
                    %li
                      = link_to edit_post_path(post), :title => 'Редактировать пост ' + post.title do
                        %i.icon-pencil
                        Редактировать
                    %li
                      = link_to post, method: :delete, data: { confirm: 'Are you sure?' }, :title => 'Удалить пост ' + post.title do
                        %i.icon-trash
                        Удалить
    %div.post-content
      =post.body